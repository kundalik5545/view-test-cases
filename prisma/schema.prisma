generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model xpsTestCase {
  id               String            @id @default(uuid())
  testCaseId       String
  location         String
  testCaseName     String
  expectedResult   String?
  actualResult     String?
  automationStatus AutomationStatus?
  testStatus       TestStatus?
  module           Module?
  schemeLevel      SchemeLevel?
  client           Client?
  releaseNo        ReleaseNo?
  priority         Priority?
  comments         String?
  defectId         String?
  screenshots      String             @default("[]")
}

model eMemberTestCase {
  id               String            @id @default(uuid())
  testCaseId       String
  location         String
  testCaseName     String
  expectedResult   String?
  actualResult     String?
  automationStatus AutomationStatus?
  testStatus       TestStatus?
  portal           Portal? 
  priority         Priority?
  comments         String?
  defectId         String?
  screenshots      String             @default("[]")
}

enum AutomationStatus {
  Automated
  NotAutomated
  Blocked
  InProgress
}

enum TestStatus {
  NotRun
  Passed
  Failed
  Blocked
  Skipped
}

enum Module {
  Details
  ToolsAndProcesses
  Letters
  Leavers
  Reports
  Others
}

enum SchemeLevel {
  TL
  ML
  SL
}

enum Client {
  XPS
  Other
}

enum Portal {
  Admin
  Public
  CAT
  Fusion
  Umbraco
  DataHub
  Other
}


enum ReleaseNo {
  R3_43
  R3_44
  R3_45  
}

enum EmReleaseNo {
Old
New
Other
}

enum Priority {
  High
  Medium
  Low
}